/**index.wxss**/
.container {
  background-color: #f2f2f2;
}
.userinfo {
  position:relative;
  display: flex;
  flex-direction: column;
  width: 750rpx;
  height:320rpx;
  align-items: center;  
}
.userinfo:before {
  content:'';
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  z-index:2;
  background:rgba(255,255,255,0.5);  
}
.userinfo .bg{
  position:absolute;
  top:0;
  left:0;
  z-index:1;
  width: 750rpx;
  height:320rpx;
}
.userinfo .inner{
  position:relative;
  z-index:2;
  width: 750rpx;
  padding-top:80rpx;
  text-align:center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background:#00A3F4;
  margin:0 auto;
  margin-bottom:10rpx;
}
.userinfo-nickname {
  color: #fff;
  display:block;
  text-align:center;
  line-height:1.2rem;
  height:1.2em;
  font-size:36rpx;
}
.info-item{
    position: relative;
    display: flex;
    padding: 20rpx;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dadada;
}
.info-item-lf{
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}
.info-item-lf image{
  width: 100%;
  height: 20px;
  vertical-align: -15%;
}
.info-item-txt{
  display: inline-block;
}
.info-item-txt_p{
  font-size: 14px;
  color: #939393;
}
.badge{
  position: absolute;
  top: 24rpx;
  right: 40px;
  width: 16px;
  height: 16px;
  line-height: 16px;
  background: #ff0000;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 10px;
}
.with_arrow{
  position: absolute;
  top: 24rpx;
  right: 16px;
  width: 16px;
  height: 16px;
  color:#999;
  font-size:32rpx;
  text-align:right;
}