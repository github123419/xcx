.container {
  position:absolute;
  left:0;
  top:0;
  bottom: 0;
  right: 0;
}
.hed {
  position:fixed;
  z-index: 3;
  left:0;
  top:0;
  width:100%;
  padding:0 20rpx;
  height:80rpx;  
  background:#fff;
  border-bottom:1px solid #eee;
  box-sizing: border-box;
}
.hed-btn {
  float:right;
  line-height:80rpx;
  font-size:30rpx;
  color:#333;
  padding:0 16rpx;
}

/*art*/
.art {
  position:absolute;
  left:0;
  top:80rpx;
  bottom: 100rpx;
  right: 0;
  overflow: auto;
  z-index: 2;
  background:#f2f2f2;
}
.pro-list {
  
  padding:40rpx 0;
}
.pro-item {
  background:#fff;
  display: -webkit-flex;
  display: flex;
  padding:20rpx;
  height:160rpx;
  overflow:hidden;
  box-sizing: border-box;
  border-bottom:1px solid #eee;  
}
.pro-icon {
  width:60rpx;
  height:120rpx;
  background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat left center;
  background-size: 40rpx auto;
}
.pro-icon.active {
  background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat left center;
  background-size: 40rpx auto; 
}
.pro-pic {
  padding:0 20rpx;
  width:120rpx;
  height:120rpx;
}
.pro-pic image {
  width:120rpx;
  height:120rpx;
}
.pro-txt {
  width:490rpx;
  display: -webkit-flex;
  display: flex;
  align-content: space-between;
  flex-direction: column;
}
.pro-name {
  width:100%;
  line-height:1.4em;
  font-size:28rpx;
  color:#333;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  -o-text-overflow:ellipsis;
}
.pro-des {
  width:100%;
  line-height:1.4em;
  font-size:28rpx;
  color:#999;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  -o-text-overflow:ellipsis;
}
.pro-bt {
  width:100%;
  height:48rpx;
  line-height:48rpx;
  font-size:28rpx;
  color:#999;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
}
.pro-price {color:#E64340;}

.number-group {float:right;height:48rpx;line-height:48rpx;width:160rpx;display:-webkit-flex;display:flex;}
.number-btn {height:48rpx;line-height:48rpx;text-align:center;border:1px solid #aaa;font-size:28rpx;color:#666;-webkit-flex-grow:1;flex-grow:1;-webkit-box-sizing:border-box;box-sizing:border-box;}
.number-input {height:48rpx;line-height:48rpx;text-align:center;border:solid #aaa;border-width:1px 0;font-size:28rpx;color:#333;-webkit-flex-grow:1.2;flex-grow:1.8;-webkit-box-sizing:border-box;box-sizing:border-box;}


/*fot*/
.fot {
  position:fixed;
  z-index: 3;
  left:0;
  bottom:0;
  height:100rpx; 
  width:100%;
  background:#fff;
  border-top:1px solid #eee;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
}
.fot-rt {
  width:200rpx;
  height:100rpx; 
  line-height:100rpx; 
  text-align: center;
  background:#E64340;
  font-size:30rpx;
  color:#fff;
}
.fot-rt-dis {
  background:#cdcdcd;
} 

.fot-lf {  
  width:550rpx;
  height:100rpx; 
  line-height:100rpx;   
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size:30rpx;
}
.fot-icon {
  padding-left:60rpx;
  height:100rpx; 
  line-height:100rpx;  
  background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat left center;
  background-size: 40rpx auto;
}
.fot-icon.active {
  background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat left center;
  background-size: 40rpx auto; 
}

.fot-sum text {  
  color:#E64340;
}
